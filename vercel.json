{
  "buildCommand": "pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt",
  "installCommand": "echo 'Using buildCommand for installation'",
  "functions": {
    "api/**/*.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "TRANSFORMERS_CACHE": "/tmp/transformers_cache",
    "HF_HOME": "/tmp/hf_home",
    "SENTENCE_TRANSFORMERS_HOME": "/tmp/st_cache",
    "TORCH_HOME": "/tmp/torch_cache",
    "XDG_CACHE_HOME": "/tmp"
  }
}

